{
  "expo": {
    "name": "Chinese Phrasebook",
    "slug": "chinese-phrasebook-tkm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/chinese-phrasebook-icon-1024x1024.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/chinese-phrasebook-icon-1024x1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#DC2626"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.chinesephrasebook",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "CFBundleDisplayName": "Chinese Phrasebook",
        "CFBundleName": "Chinese Phrasebook"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/chinese-phrasebook-icon-192x192.png",
        "backgroundColor": "#DC2626"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourname.chinesephrasebook",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/chinese-phrasebook-icon-192x192.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}